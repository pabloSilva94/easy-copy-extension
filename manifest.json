{
    "manifest_version": 3,
    "name": "Copy Fields",
    "description": "Extension to copy data.",
    "version": "0.0.3",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "popup.js"
            ]
        }
    ]
}